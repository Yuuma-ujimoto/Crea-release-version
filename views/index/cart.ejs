<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Crea/カート</title>
    <!-- MDB icon -->
    <link rel="icon" href="/bootstrap/img/crea_favicon.png" type="image/x-icon">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="/bootstrap/css/mdb.min.css">
    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="/bootstrap/css/style.css">
</head>

<body>

<!-- Start your project here-->

<%-include("../base/header")%>

<div class="container my-5 py-3 z-depth-1 rounded">


    <!--Section: Content-->
    <section class="dark-grey-text">

        <!-- Shopping Cart table -->
        <div class="table-responsive">

            <table class="table product-table mb-0">

                <!-- Table head -->
                <thead class="mdb-color lighten-5">
                <tr>
                    <th>使用品画像(表)</th>
                    <th>使用品画像(表)</th>
                    <th class="font-weight-bold">
                        <strong>商品名</strong>
                    </th>


                    <th class="font-weight-bold">
                        <strong>値段</strong>
                    </th>
                    <th></th>

                </tr>
                </thead>
                <!-- /.Table head -->

                <!-- Table body -->
                <tbody>

                <% cart.forEach(items=>{ %>
                <tr>
                    <th scope="row">
                        <img src="https://s3-ap-northeast-1.amazonaws.com/crea-test-bucket/public/<%- items.front_image_path %>"
                             alt="" class="img-fluid z-depth-0" style="width:300px">
                    </th>
                    <th scope="row">
                        <img src="https://s3-ap-northeast-1.amazonaws.com/crea-test-bucket/public/<%- items.back_image_path %>"
                             alt="" class="img-fluid z-depth-0" style="width:300px">
                    </th>
                    <td>
                        <h5 class="mt-3">
                            <strong><%- items.products_name %></strong>
                        </h5>
                    </td>

                    <td>
                        <h5 class="mt-3">
                            <strong><%- items.price %>円</strong>
                        </h5>
                    </td>
                    <td class="font-weight-bold">
                    </td>
                </tr>
                <!-- ここまで -->
                <% }) %>

                <!-- Fourth row -->
                <td colspan="2">
                </td>
                <td colspan="3" class="text-right">
                    <a href="/order/buy">
                        <button type="button" class="btn btn-blue-grey btn-rounded">購入
                            <i class="fas fa-angle-right right"></i>
                        </button>
                    </a>
                </td>
                </tr>
                <!-- Fourth row -->

                </tbody>
                <!-- /.Table body -->

            </table>

        </div>
        <!-- /.Shopping Cart table -->

    </section>
    <!--Section: Content-->


</div>

<%-include("../base/footer")%>


<!-- End your project here-->

<!-- jQuery -->
<script type="text/javascript"
        src="/bootstrap/js/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript"
        src="/bootstrap/js/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript"
        src="/bootstrap/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript"
        src="/bootstrap/js/mdb.min.js"></script>
<!-- Your custom scripts (optional) -->
<script type="text/javascript"></script>

</body>

</html>
