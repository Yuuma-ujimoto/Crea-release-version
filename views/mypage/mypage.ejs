<body>

  <!-- Start your project here-->
  <%-include("../base/header")%>


  <div class="container my-5">


  <!--Section: Content-->
  <section class="dark-grey-text text-center">

    <!-- Section heading -->
    <h3 class="font-weight-bold black-text mb-4 pb-2"><%-user_name%>さんのマイページ</h3>

    <!--First row-->
    <div class="row">

      <!--Grid column-->
      <div class="col-md-3 mb-4">

        <!-- Card -->
        <a href="/mypage/info" class="card hoverable">

          <!-- Card content -->
          <div class="card-body my-4">

          	<p><i class="fas fa-user-circle fa-2x text-muted"></i></p>
            <h5 class="black-text mb-0">登録情報</h5>

          </div>

        </a>
        <!-- Card -->

      </div>
      <!--Grid column-->

      <!--Grid column-->

      <div class="col-md-3 mb-4">

        <!-- Card -->
        <a href="/mypage/credit/" class="card hoverable">

          <!-- Card content -->
          <div class="card-body my-4">

            <p><i class="fas fa-credit-card  fa-2x text-muted"></i></p>
            <h5 class="black-text mb-0">支払い情報</h5>

          </div>

        </a>
        <!-- Card -->

      </div>
      <!--Grid column-->
      <!--Grid column-->
      <div class="col-md-3 mb-4">

        <!-- Card -->
        <a href="/mypage/address" class="card hoverable">

          <!-- Card content -->
          <div class="card-body my-4">

            <p><i class="fas fa-map  fa-2x text-muted"></i></p>
            <h5 class="black-text mb-0">発送先</h5>

          </div>

        </a>
        <!-- Card -->

      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-3 mb-4">

        <!-- Card -->
        <a href="/mypage/order/history" class="card hoverable">

          <!-- Card content -->
          <div class="card-body my-4">
          	<p><i class="fas fa-history fa-2x text-muted"></i></p>
            <h5 class="black-text mb-0">購入履歴</h5>
          </div>

        </a>
        <!-- Card -->

      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-3 mb-4">

        <!-- Card -->
        <a  href="/view/user-page/<%-user_id%>" class="card hoverable">

          <!-- Card content -->
          <div class="card-body my-4">

            <p><i class="fas fa-paper-plane fa-2x text-muted"></i></p>
            <h5 class="black-text mb-0">投稿履歴</h5>

          </div>

        </a>
        <!-- Card -->

      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-3 mb-4">

        <!-- Card -->
        <a href="/mypage/good/history" class="card hoverable">

          <!-- Card content -->
          <div class="card-body my-4">

          	<p><i class="fas fa-heart fa-2x text-muted"></i></p>
            <h5 class="black-text mb-0">お気に入り履歴</h5>

          </div>

        </a>
        <!-- Card -->

      </div>
      <!--Grid column-->
      <!--Grid column-->
      <div class="col-md-3 mb-4">

        <!-- Card -->
        <a href="/mypage/customize/history" class="card hoverable">

          <!-- Card content -->
          <div class="card-body my-4">

            <p><i class="far fa-hand-point-up fa-2x text-muted"></i></p>
            <h5 class="black-text mb-0">カスタマイズ履歴</h5>

          </div>

        </a>
        <!-- Card -->

      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-3 mb-4">

        <!-- Card -->
        <a href="#!" class="card hoverable">

          <!-- Card content -->
          <div class="card-body my-4">

          	<p><i class="fas fa-ban fa-2x text-muted"></i></p>
            <h5 class="black-text mb-0">退会</h5>

          </div>

        </a>
        <!-- Card -->

      </div>
      <!--Grid column-->

    </div>
    <!--First row-->

	</section>


</div>



  <%-include("../base/footer")%>


  <!-- End your project here-->

