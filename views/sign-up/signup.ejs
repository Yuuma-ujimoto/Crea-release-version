    <link rel="stylesheet" href="/bootstrap/css/mdb.min.css">
    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="/bootstrap/css/style.css">
</head>

<body>

<!-- Start your project here-->
<%- include("../base/header") %>

<div class="container my-5">

    <!-- Section -->
    <section class="dark-grey-text text-center">


        <h3 class="font-weight-bold black-text mb-4 pb-2">新規登録</h3>


        <!--First row-->
        <div class="row d-flex justify-content-center">

            <!--First column-->
            <div class="col-6">

                <!-- Material outline input -->
                <div class="md-form md-outline form-lg">
                    <input type="text" id="form1" class="form-control form-control-lg">
                    <label for="form1">ユーザ名</label>
                </div>

                <!-- Material outline input -->
                <div class="md-form md-outline form-lg">
                    <input type="text" id="form2" class="form-control form-control-lg">
                    <label for="form2">メールアドレス</label>
                </div>

                <!-- Material outline input -->
                <div class="md-form md-outline form-lg">
                    <input type="text" id="form3" class="form-control form-control-lg">
                    <label for="form3">パスワード</label>
                </div>

                <div class="md-form md-outline form-lg">
                    <input type="text" id="form4" class="form-control form-control-lg">
                    <label for="form4">パスワード(再入力)</label>
                </div>

                <button class="btn btn-block btn-blue-grey btn-lg mb-4">登録</button>
                <a href="/sign-in">既に登録済みの方はこちらから</a>

            </div>
            <!--First column-->

        </div>
        <!--First row-->

    </section>
    <!-- Section -->

</div>


<%- include("../base/footer") %>

<!-- End your project here-->

